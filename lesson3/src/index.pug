    //========== FORM ==========
    div(class="forms-block")
      div(class="row")
        div(class="col-md-4 col-sm-6")
          form(action="#" method="post")
            fieldset
              legend Тег datalist

              label(for="fruit") Фрукт
              input(id="fruit" list="fruits" name="myFruits")
              datalist(id="fruits")
                option(value="apple") Яблоко
                option(value="pineapple") Ананас
                option(value="apricot") Абрикос
                option(value="watermelon") Арбуз
                option(value="avocado") Авокадо
                option(value="orange") Апельсин
            input(type="submit" value="Отправить")

        div(class="col-md-4 col-sm-6")
          form(action="#" method="post")
            fieldset
              legend Временных типов данных

              label(for="date") Тип date
              input(name="date" id="date" type="date")

              label(for="time") Тип time
              input(name="time" id="time" type="time")

              label(for="datetime-local") Тип datetime-local
              input(name="datetime-local" id="datetime-local" type="datetime-local")

              label(for="month") Тип month
              input(name="month" id="month" type="month")

              label(for="week") Тип week
              input(name="week" id="week" type="week")

            input(type="submit" value="Отправить")

        div(class="col-md-4 col-sm-6")
          form(action="#" method="post")
            fieldset
              legend Другие типы данных

              label(for="email") Тип email
              input(name="email" id="email" type="email")

              label( for="tel") Тип tel
              input(name="tel" id="tel" type="tel")

              label( for="url") Тип url
              input(name="url" id="url" type="url")

              label( for="number") Тип number
              input(name="number" id="number" type="number")

              label( for="color") Тип color
              input(name="color" id="color" type="color")
            input(type="submit" value="Отправить")

        div(class="col-md-4 col-sm-6")
          form(action="#" method="post")
            fieldset
              legend Контактная информация

              label(for="surname") Фамилия
                em *
              input(
                type = "text"
                id="surname"
                name="surname"
                placeholder="Иванов"
                pattern="^([А-Яа-я]+)$"
              )

              label(for="name") Имя
                em *
              input(
                type="text"
                id="name"
                name="name"
                placeholder="Иван"
                pattern="^([А-Яа-я]+)$"
              )

              label(for="lastName") Отчество
                em *
              input(
                type="text"
                id="lastName"
                name="lastName"
                placeholder="Сидорович"
                pattern="^([А-Яа-я]+)$"
              )

              label(for="email") Email
                em *
              input(
                type="text"
                id="email2"
                name="email"
                placeholder="email@server.com"
                pattern="^([A-Za-z0-9\.-_]+)(@)([A-Za-z0-9\.-]+)(\.)([A-Za-z0-9\.-]{2,})$"
              )

            input(type="submit" value="Отправить")

        div(class="col-md-4 col-sm-6")
          form(action="#" method="post" oninput="result.value=range.value")
            fieldset
              legend type="range":

              input(name="range" id="range" type="range" value="50" step="1" min="0" max="100")
              p Значение range:
                output(name="result" for="range") 50

            input(type="submit" value="Отправить")

        div(class="col-md-4 col-sm-6")
          form(action="#" method="post")
            fieldset
            - var URL = "https://bipbap.ru/wp-content/uploads/2017/04/11-1.jpg"
            fieldset
              legend type="image":

              input(type="image" src=URL)
    //========== END FORM ==========